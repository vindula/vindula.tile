<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="vindula.tile">

  <head>
  </head>
  <body>
    <metal:main fill-slot="content-core">
        
        <div id="tile-accordion" metal:define-macro="page"
             tal:define="view_accordion nocall:context/@@accordion-view;">
            <div class="box-title">
                <h4>
                  <tal:cont tal:content="context/Title">Accordion</tal:cont>
                  <hr/>
                </h4>
            </div>
            <div class="tile-section-container">
                <tal:rep repeat="item context/values">
                    <section>
                        <h6 class="title">
                            <a tal:content="item/Title">Accordion</a>
                        </h6>
                        <div class="content">
                            <p tal:content="structure item/getText">Content of section 1.</p>
                        </div>
                    </section>
                </tal:rep>
            </div>
        </div>
    </metal:main>
  </body>
</html>
