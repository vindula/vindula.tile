<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="vindula.tile">
  <head>

  </head>
  <body>
    <metal:main fill-slot="content-core">
        <metal:macro define-macro="page"
                     tal:define="view_accordion nocall:context/@@accordion-view;">

            <h2 tal:content="context/Title"></h2>

            <div class="section-container accordion" data-section="accordion">
              <tal:rep repeat="item context/values">

                <section>
                  <p class="title" data-section-title>
                    <a href="#" tal:content="item/Title">Section 1</a>
                  </p>
                  <div class="content" data-section-content>
                    <p tal:content="structure item/getText">Content of section 1.</p>
                  </div>
                </section>

              </tal:rep>
            </div>

        </metal:macro>
    </metal:main>
  </body>
</html>