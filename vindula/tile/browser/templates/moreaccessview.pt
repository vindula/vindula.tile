<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="vindula.tile">

    <body>
        <metal:main fill-slot="content-core">
            <metal:macro define-macro="page"
                         tal:define="view_macro nocall:context/@@moreaccess-view;
                                     path_macro  string:context/@@moreaccess-view/macros/${view_macro/getKind}">

                <metal:block tal:condition="path_macro"
                             metal:use-macro="python:path(path_macro)"/>

            </metal:macro>
        </metal:main>
    </body>
</html>
<metal:macro define-macro="padrao"
             tal:define="view_macro nocall:context/@@moreaccess-view;">
    <div id="tite-more-access">
        <div class="columns large-12">
            <div class="row box-title">
                <div class="columns small-10">
                    <h4>
                        <span tal:replace="context/Title"></span>
                        <hr/>
                    </h4>
                </div>
                <div class="columns small-2">
                    <a href="#" class="right more">
                        <h1 class="subheader vindula-icon-plus-sign"></h1>
                    </a>
                </div>
            </div>
        </div>

        <div class="columns large-12">
            <h6 class="subheader">
                Mais Acessadas:
            </h6>
        </div>

        <div class="columns large-12">
          <tal:rep repeat="item view_macro/getItens">
            <div class="row" tal:define="obj item/content/getObject">

                <div class="columns small-2">
                    <img src="" alt="" tal:attributes="alt obj/Title;
                                                       title obj/Title;">
                </div>

                <div class="columns small-10">
                    <a href="" tal:attributes="href obj/absolute_url;
                                               alt obj/Title;
                                               title obj/Title;">
                        <span tal:content="obj/Title">Lorem ipsum.</span>
                    </a>
                </div>
            </div>
          </tal:rep>
        </div>
    </div>

</metal:macro>
<metal:macro define-macro="unidade"
             tal:define="view_macro nocall:context/@@moreaccess-view;">

    <div id="tite-more-access">
        <div class="columns large-12">
            <div class="row box-title">
                <div class="columns small-10">
                    <h4>
                        <span tal:replace="context/Title"></span>
                        <hr/>
                    </h4>
                </div>
                <div class="columns small-2">
                    <a href="#" class="right more">
                        <h1 class="subheader vindula-icon-plus-sign"></h1>
                    </a>
                </div>
            </div>
        </div>

        <div class="columns large-12">
            <h6 class="subheader">
                Mais Acessadas:
            </h6>
        </div>

        <div class="columns large-12">
          <tal:rep repeat="item view_macro/getItens">
            <div class="row" tal:define="obj item/content/getObject">

                <div class="columns small-2">
                    <img tal:condition="obj/getImage|nothing"
                         tal:attributes="src python: obj.getImage().absolute_url()+'/image_mini';
                                         alt obj/Title; title obj/Title;">
                </div>

                <div class="columns small-10">
                  <a href="" tal:attributes="href obj/absolute_url;
                                             alt obj/Title;
                                             title obj/Title;"
                             tal:content="obj/Title">Lorem ipsum.</a>

                  <span tal:content="obj/Title">Lorem ipsum.</span> <br />
                  <span tal:content="obj/manager|nothing">Gestor</span>
                </div>
            </div>
          </tal:rep>
        </div>
    </div>

</metal:macro>
