<metal:macro define-macro="two_columns"
             tal:define="view_macro nocall:context/@@moreaccess-view;
                         itens view_macro/getItens;

                         Batch python:modules['Products.CMFPlone'].Batch;
                         b_size request/b_size|string:8;
                         b_start python:0;
                         b_start request/b_start | b_start;

                         batch python:Batch(itens, int(b_size), int(b_start), pagerange=len(itens));"
             tal:condition="batch">

    <div class="columns large-12">
        <div id="tile-more-acess-unity" class="row list_tile">
            <div class="title columns large-12">
              <div class="right" id="pag-nav">
                <metal:block metal:use-macro="context/boll_batch/macros/navigation" />
              </div>

              <h5>
                  <span tal:replace="context/Title">UNIDADES MAIS ACESSADAS</span>
                  <hr/>
              </h5>
            </div>
            <div class="container lista-news">
              <input type="hidden" id="b_size" tal:attributes="value b_size" />
              <input type="hidden" id="b_start" tal:attributes="value b_start" />
              <input type="hidden" id="absolute_url" tal:attributes="value string:${context/absolute_url}" />

              <tal:rep repeat="item batch">
                  <div class="large-6 columns item"
                       tal:define="obj item/content/getObject">
                    <div style="width: 16%; height: 40px;" class="left">
                        <img tal:attributes="src obj/getImageIcone|nothing;
                                             alt obj/Title; title obj/Title;" />
                    </div>
                    <div style="width: 84%;" class="left">
                        <a class="block" href="#" tal:attributes="href string:${obj/absolute_url}/view;"
                                         tal:content="obj/getSiglaunidade|obj/Title" >DIBOP</a>
                        <span class="block" tal:content="obj/Title">Divisao de Boas Praticas</span>

                        <a class="block" href="#">Pedro Miranda Prado</a>

                    </div>
                  </div>
              </tal:rep>
            </div>

            <!-- Spinner -->
            <div class="spinner display-none" style="text-align:center; margin: 30px;">
                <img src="" alt="spinner" align="center" tal:attributes="src string:${context/portal_url}/++resource++vindula.myvindula.views/ajaxLoader.gif" />
            </div>


    </div>

</metal:macro>
<metal:macro define-macro="mais_itens"
             tal:define="view_macro nocall:context/@@moreaccess-view;">

    <div class="box-more-items box-hidden">
      <div class="seta-box">
        <img tal:attributes="src string:${context/portal_url}/++resource++vindula.tile/images/seta-box.png" />
      </div>
      <ul class="letters no-bullet" tal:define="constructor view_macro/constructor">
        <tal:rep repeat="item view_macro/alphabet">
            <li class="active"
                tal:define="content_itens python: constructor[item];
                            has_content python: len(content_itens) == 0"
                tal:attributes="class python:view_macro.is_first_active(has_content)" >

                <h6 class="subheader" tal:attributes="class python: has_content and 'subheader' or '' ">
                  <a href="#" tal:content="item" tal:condition="content_itens" ></a>
                  <tal:cont  tal:content="item" tal:condition="not: content_itens"  />
                </h6>
                <ul tal:attributes="id item"
                    tal:condition="content_itens" class="hide no-bullet">
                    <tal:rep repeat="valor content_itens">
                        <li tal:define="obj valor/getObject">
                            <a tal:attributes="href string:${obj/absolute_url|nothing}${context/getPath_link}"
                            tal:content="python:view_macro.getTitle(obj)">UNIDADE</a>
                        </li>
                    </tal:rep>
                </ul>
            </li>
        </tal:rep>
      </ul>
    </div>
</metal:macro>
