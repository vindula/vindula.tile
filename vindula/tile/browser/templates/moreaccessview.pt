<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="vindula.tile">

    <head>
      <metal:js fill-slot="javascript_head_slot">

        <script type="text/javascript" src=""
                tal:attributes="src string:${context/absolute_url|nothing}/++resource++vindula.tile/js/ajax_boll_batch.js"></script>
      </metal:js>

    </head>
    <body>
        <metal:main fill-slot="content-core">
            <metal:macro define-macro="page"
                         tal:define="view_macro nocall:context/@@moreaccess-view;
                                     path_macro  string:context/@@moreaccess-view/macros/${view_macro/getKind}">
                <metal:block tal:condition="path_macro"
                             metal:use-macro="python:path(path_macro)"/>
            </metal:macro>
        </metal:main>
    </body>
</html>
<metal:macro define-macro="padrao"
             tal:define="view_macro nocall:context/@@moreaccess-view;">
    <div id="tile-more-access">
        <div class="columns large-12 colunas">
            <div class="row box-title">
                <div class="columns small-10">
                    <h4>
                        <span tal:replace="context/Title"></span>
                        <hr/>
                    </h4>
                </div>
                <div class="columns small-2 icon-moreaccess show-box-hidden">
                    <a href="#" class="right more">
                        <h1 class="subheader vindula-icon-plus-sign"></h1>
                    </a>
                    <metal:block metal:use-macro="context/@@moreaccess-view/macros/mais_itens" />
                </div>
            </div>
        </div>
        <div>
            <h6 class="subheader">
                Mais Acessadas:
            </h6>
        </div>
        <div class="columns large-12">
          <tal:rep repeat="item view_macro/getItens">
            <div class="row news_access" tal:define="obj item/content/getObject">

                <div class="columns small-3 padrao_image">

                    <img tal:attributes="src obj/getImageIcone|nothing;
                                         alt obj/Title; title obj/Title;">
                </div>

                <div class="columns small-9">
					         <div id="text_tile">
                	    <a href="" tal:attributes="href string:${obj/absolute_url}/view;
                    	                           alt obj/Title;
                        	                       title obj/Title;">
                        	<span tal:content="obj/Title">Lorem ipsum.</span>
                   	  </a>
					         </div>
                </div>
            </div>
          </tal:rep>
        </div>
    </div>
</metal:macro>
