<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="vindula.tile">

  <head>

  </head>
  <body>
    <metal:main fill-slot="content-core">

      <div tal:repeat="item context/values">
          <p tal:content="item/Title"></p>
          <div id="macro-tile" tal:define="path_macro python:view.getMacro(item);
                                           context nocall:item">

              <metal:block tal:condition="path_macro"
                            metal:use-macro="python:path(path_macro)" />
          </div>

      </div>

    </metal:main>
  </body>
</html>